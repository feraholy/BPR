<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment" >

    <androidx.cardview.widget.CardView
        android:id="@+id/view2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="12dp"
        app:cardBackgroundColor="@color/blue2"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <Button
                android:id="@+id/creditButton"
                android:layout_width="105dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/round_buttton"
                android:drawableTop="@drawable/ic_credit"
                android:padding="16dp"
                android:text="Credit"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/referralButton"
                app:layout_constraintStart_toStartOf="@+id/helpButton"
                app:layout_constraintTop_toBottomOf="@+id/referralButton" />

            <Button
                android:id="@+id/creditButton2"
                android:layout_width="105dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_buttton"
                android:drawableTop="@drawable/ic_credit"
                android:padding="16dp"
                android:text="Admin"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/creditButton"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/referralButton"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_buttton"
                android:drawableTop="@drawable/ic_share"
                android:padding="16dp"
                android:text="Share"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/logoutButton"
                app:layout_constraintStart_toStartOf="@+id/profileButton"
                app:layout_constraintTop_toBottomOf="@+id/logoutButton" />

            <Button
                android:id="@+id/helpButton"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_buttton"
                android:drawableTop="@drawable/ic_help"
                android:padding="16dp"
                android:text="Support"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/profileButton"
                app:layout_constraintStart_toStartOf="@+id/walletButton"
                app:layout_constraintTop_toBottomOf="@+id/walletButton" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/userFullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                app:corners="16"
                app:fontFamily="@font/roboto_condensed_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:width_weight="1.0" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/balanceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:corners="16"
                app:fontFamily="@font/roboto_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userFullname"
                app:width_weight="1.0" />

            <TextView
                android:id="@+id/winningBalPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto_bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/balanceView" />

            <Button
                android:id="@+id/profileButton"
                android:layout_width="105dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/round_buttton"
                android:drawableTop="@drawable/ic_profile"
                android:padding="16dp"
                android:text="Profile"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/logoutButton"
                app:layout_constraintStart_toEndOf="@+id/walletButton"
                app:layout_constraintTop_toBottomOf="@+id/winningBalPro" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="105dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_buttton"
                android:drawableTop="@drawable/ic_logout"
                android:padding="16dp"
                android:text="Logout"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profileButton"
                app:layout_constraintTop_toTopOf="@+id/profileButton" />

            <Button
                android:id="@+id/walletButton"
                android:layout_width="105dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/round_buttton"
                android:drawableTop="@drawable/ic_wallet"
                android:padding="16dp"
                android:text="Wallet"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/profileButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/profileButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>